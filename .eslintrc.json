{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
      "plugin:react/recommended",
      "standard",
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:react-hooks/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true,
          "tsx": true,
          "js": true,
          "ts": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": [
      "react",
      "@typescript-eslint",
      "prettier",
      "react-hooks"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/jsx-no-target-blank": "off"
  }
}
